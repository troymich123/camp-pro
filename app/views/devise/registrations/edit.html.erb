<!doctype html>
<html lang="ja">
<body>
<%= render "shared/header" %>

  <main>
    <div class="container-fluid text-center py-3 bg-light">
      <h4>ユーザー情報編集</h4>
      <div class="row-lg-6 card mb-3 w-90 p-4 mx-auto shadow-sm">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="nickname">
              <label for="nickname">ニックネーム</label>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", maxlength:"40", class:"form-control", id:"nickname" %>
            </div>

            <div class="inputemail">
              <label for="inputemail">e-mail</label>
              <%= f.email_field :email, autocomplete: "email", class:"form-control", id:"inputbrand" %>
            </div>

            <div class="password">
              <label for="password">新パスワード※更新しない場合は空欄</label>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"password" %>
            </div>

            <div class="field">
              <label for="new-password">新パスワード再入力※更新しない場合は空欄</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"new-password" %>
            </div>

            <div class="field">
              <label for="current_password">現パスワード</label>
              <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>
            <br>
            <div class="submitchange">
              <%= f.submit "更新" , class:"btn btn-secondary btn-sm" %>
              <%= link_to 'もどる', root_path, class:"btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        <% end %>
        <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会しますか？" }, method: :delete, class:"btn btn-sm btn-outline-secondary" %>

      </div>
    </div>
  </main>

<%= render "shared/footer" %>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"></script>
  <!-- popper -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"></script>
  <!-- Bootstrap -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
    crossorigin="anonymous"></script>
</body>