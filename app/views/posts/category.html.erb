<%= render "shared/header" %>

  <main>
    <div class="text-center container-fluid bg-light">
      <div class="card w-90 p-0 mx-auto shadow-sm">
        <div class="card-body">
        
          <% if @post.present? %>
            <h4 class="text-center mt-2 py-3 bg-light"><%= @post.category.name %> 投稿一覧</h4>
          <% end %>

          <div class="album py-3 bg-light">
            <%= render "shared/album" %>
          </div>

        </div>
      </div>
    </div>
  </main>

<%= render "shared/footer" %>