<%= render "shared/header" %>

  <main>
  
    <section class="text-center container-fluid bg-light">
      <div class='title-contents'>
        <div class="row py-lg-3">
          <div class="col-lg-9 col-md-12 mx-auto">
            <br>
            <h1 class="fw-light-ext">ギア好きキャンパーたちが集うCamp Pro</h1>
            <br>
            <p class="lead-ext">自慢のギアを他のキャンパーたちと共有しよう</p>
            <br>
          </div>
        </div>
      </div>
    </section>

    <h4 class="text-center mt-2 py-3 bg-light">-最新ギア投稿-</h4>

    <div class="album py-3 bg-light">
      <%= render "shared/album" %>
      <br>
      <%= paginate @posts, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center" %>
    </div>

    <h4 class="text-center mt-2 py-3 bg-light">-人気ギア投稿-</h4>

    <div class="album py-3 bg-light">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @posts_best.first(3).each do |post| %>
            <div class="col">
              <div class="card shadow-sm">
                <%= image_tag post.image, class: "post-img" %>
                <div class="card-body">
                  <h5><%= post.gearmodel %></h5>
                  <p class="card-text"><%= post.text.truncate(30) %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                    
                      <% if user_signed_in? %>
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                          <div id="like_buttons_<%= post.id %>">
                          <%= render "likes/likes", post: post %>
                          </div>
                        </button> 
                      <% else %>
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart-fill" viewBox="0 0 16 16">
                            <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"/>
                          </svg>
                          <a><%= post.likes.count %></a>
                        </button>
                      <% end %>

                      <button type="button" class="btn btn-sm btn-outline-secondary">
                        <%= link_to '詳細', post_path(post.id), class:'text-decoration-none text-reset' %>
                      </button>
                      
                    </div>

                    <small><%= link_to post.user.nickname, user_path(post.user.id), class:"text-muted" %></small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <br>
    </div>

  </main>

<%= render "shared/footer" %>