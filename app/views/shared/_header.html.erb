  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

    <div class="b-example-divider"></div>

    <header class="p-3 mb-3 border-bottom">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <%= link_to image_tag("logo.png", size: "64x64", class:"img-fluid rounded-3"), "/" %>

          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/" class="nav-link px-2 link-secondary">Camp Pro</a></li>
            <li><a href="/categories" class="nav-link px-2 link-dark">カテゴリー</a></li>
            <li><a href="/brands" class="nav-link px-2 link-dark">ブランド</a></li>
          </ul>

          <div class="bg-light mb-3 mb-lg-0 me-3">
            <form class="form-inline">
              <button class="btn btn-secondary" type="button">
                <%= link_to "ギア登録", new_post_path, class:'text-decoration-none text-reset' %>
              </button>
            </form>
          </div>

          <div class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
            <%= search_form_for @search, url: search_posts_path do |f| %>
              <%= f.text_field :gearmodel_or_text_cont, placeholder: 'ギア検索...', class:"form-control" %>
            <% end %>
          </div>

          <div class="dropdown text-end">
            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-toggle="dropdown" aria-expanded="false">
              <% if user_signed_in? %>
                <%= image_tag @myuser.avatar, size: "32x32", class:"mx-auto rounded-circle" %>
              <% else %>
                <%= image_tag "noavatar.png", size: "32x32", class:"mx-auto rounded-circle" %>
              <% end %>
            </a>
            <ul class="dropdown-menu dropdown-menu-right text-small" aria-labelledby="dropdownUser1">
              <% if user_signed_in? %>
                <li><%= link_to 'ギア登録', new_post_path, class: "dropdown-item" %></li>
                <li><%= link_to 'マイページ', user_path(current_user.id), class: "dropdown-item" %></li>
                <li><%= link_to 'ユーザー情報編集', edit_user_registration_path, class:'dropdown-item' %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
              <% else %>
                <li><%= link_to 'ログイン', new_user_session_path, class: "dropdown-item" %></li>
                <li><%= link_to 'ユーザー登録', new_user_registration_path, class: "dropdown-item" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </header>